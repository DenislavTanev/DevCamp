@model DevCamp.Web.ViewModels.Listings.ListingViewModel

@{ 
    var count = 0;
}

<div class="card">
    @if (Model.ListingImages.Any())
    {
        <div id="Item-@Model.Id" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
            <div class="carousel-inner">
                @foreach (var image in Model.ListingImages)
                {
                    @if (count == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@image" class="d-block w-100" alt="...">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@image" class="d-block w-100" alt="...">
                        </div>
                    }
                    count++;
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#Item-@Model.Id" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#Item-@Model.Id" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                @if (Model.UserProfilePic != null)
                {
                    <img class="rounded-circle" style="height:20px;width:20px;" src="@Model.UserProfilePic">
                }
                else
                {
                    <img class="rounded-circle" style="height:20px;width:20px;" src="https://hook.finance/sites/default/files/user.png">
                }
            </div>
            <div class="col-8 text-start">
                <a asp-action="PersonalListing" asp-controller="Listings" asp-route-Id="@Model.Id">@Model.Username</a>
            </div>
        </div>
        <a class="card-title" asp-action="PersonalListing" asp-controller="Listings" asp-route-Id="@Model.Id">@Model.Title</a>
        <hr />
        <div class="row">
            <a asp-action="PersonalListing" asp-controller="Listings" asp-route-Id="@Model.Id">
                <div class="text-uppercase text-muted text-end">
                    Starting at <span class="text-dark">$@Model.StartingPrice</span>
                </div>
            </a>

        </div>
    </div>
</div>


