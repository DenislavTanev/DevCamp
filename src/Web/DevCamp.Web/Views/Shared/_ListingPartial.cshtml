@model DevCamp.Web.ViewModels.Listings.ListingViewModel

<div class="card">
    <div id="Item-@Model.Id" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/allbikes-1539286251.jpg?crop=0.985xw:1.00xh;0.00812xw,0&resize=1200:*" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://surlybikes.com/uploads/bikes/_medium_image/Surly-Bridge-Club-BK1967-Gray-Background-2000x1333.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://static.standard.co.uk/s3fs-public/thumbnails/image/2020/05/29/12/best-bikes-online.png?width=968&auto=webp&quality=75&crop=968%3A645%2Csmart" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#Item-@Model.Id" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#Item-@Model.Id" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <img class="rounded-circle" style="height:20px;width:20px;" src="https://zelensviat.com/wp-content/uploads/2019/03/410527-1200x900.jpg">
            </div>
            <div class="col-8 text-start">
                @Model.Username
            </div>
        </div>
        <h5 class="card-title">@Model.Title</h5>
        <hr />

        <div href="#">Starting at $@Model.StartingPrice</div>
    </div>
</div>


