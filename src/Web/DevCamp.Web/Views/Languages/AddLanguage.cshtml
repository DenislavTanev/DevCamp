@model DevCamp.Web.ViewModels.Languages.LanguageCreateInputModel

@{ 
    var languages = Model.Languages.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<div>Add Language</div>
<div>
    <form method="post">
        <div class="form-group was-validated">
            <select asp-for="LanguageId" asp-items="languages" class="form-control rounded-pill custom-select myselect" required>
                <option value="" disabled selected>Select Language</option>
            </select>
        </div>
        <div>
            <input />
        </div>
    </form>
</div>
