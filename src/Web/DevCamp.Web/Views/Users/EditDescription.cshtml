@model DevCamp.Web.ViewModels.Users.EditDescriptionInputModel


<div>
    <form method="post" asp-controller="Users" asp-action="EditDescription">
        <div class="form-group was-validated">
            <textarea asp-for="@Model.Information" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="@Model.Information" class="text-danger"></span>
        </div>
        <hr />
        <input hidden asp-for="@Model.Id" />
        <button type="submit" class="btn btn-success btn-user btn-block">
            Create
        </button>
    </form>
</div>

