@model DevCamp.Web.ViewModels.Listings.ListingCreateInputModel

@{
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

@{       
    this.ViewData["Title"] = "Create Gig";
}

<div class="p-4">
    <div class="text-center">
        <h1 class="text-black-50">Create Gig!</h1>
    </div>
    <form class="user text-center text-white-50" method="post">
        <div class="form-group was-validated">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control form-control-user text-center" placeholder="Title" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group was-validated">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="categories" class="form-control rounded-pill custom-select myselect" required>
                <option value="" disabled selected>Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group was-validated">
            <label asp-for="SubCategoryId"></label>
            <select asp-for="SubCategoryId" class="form-control rounded-pill custom-select myselect" required>
                <option value="" disabled selected>Select SubCategory</option>
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group was-validated">
            <label asp-for="ProjectDetails"></label>
            <textarea asp-for="ProjectDetails" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="ProjectDetails" class="text-danger"></span>
        </div>
        <table class="table-bordered table-active text-black-50 table-responsive">
            <tr>
                <th>Name:</th>
                <th scope="col">Basic</th>
                <th scope="col">Standard</th>
                <th scope="col">Premium</th>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>
                    <textarea asp-for="Package.Description" class="form-control" rows="3" required placeholder="Package Description"></textarea>
                    <span asp-validation-for="Package.Description"></span>
                </td>
                <td>
                    <textarea asp-for="Package.Description" class="form-control" rows="3" required placeholder="Package Description"></textarea>
                    <span asp-validation-for="Package.Description"></span>
                </td>
                <td>
                    <textarea asp-for="Package.Description" class="form-control" rows="3" required placeholder="Package Description"></textarea>
                    <span asp-validation-for="Package.Description"></span>
                </td>
            </tr>
            <tr>
                <th scope="row">Price</th>
                <td><input></td>
                <td><input></td>
                <td><input></td>
            </tr>
            <tr>
                <th><a class="btn btn-success" onclick="AddMoreItems()">+</a></th>
                <td>
                    <select class="form-control rounded-pill custom-select myselect" required>
                        <option value="" disabled selected>Select Item</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="row">Revisions</th>
                <td><input></td>
                <td><input></td>
                <td><input></td>
            </tr>
            <tr>
                <th scope="row">Delivery Time</th>
                <td><input></td>
                <td><input></td>
                <td><input></td>
            </tr>
        </table>
        <hr />
        <button type="submit" class="btn btn-success btn-user btn-block">
            Create
        </button>
    </form>
</div>                        
